<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being added:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<section>


<h1>Add a new product</h1>

<%= form_tag "/products", method: :post do %>
  <div>
    <%=label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%=label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>

  <div>
    <%=label_tag :image %>
    <%= text_field_tag :image %>
  </div>

  <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>

  <div>
    <%=label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

  <%= submit_tag "Make Some Money!" %>

<% end %>